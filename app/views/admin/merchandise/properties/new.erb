<h2>New Property</h2>

<%= form_for @property, :url  => admin_merchandise_properties_path, 
                        :html => {:class => 'prepend-6'}  do |form| %>
  <fieldset id="property_names" class='span-11  clear'>
    <p class='span-10 clear'>
      <div class='span-3 last'>
        <%= form.label :identifing_name %>
      </div>
      <div class='span-6 last'>
        <%= form.text_field :identifing_name %>
      </div>
    </p>
    <p class='span-10 clear'>
      <div class='span-3 last'>
        <%= form.label :display_name %>
      </div>
      <div class='span-6 last'>
        <%= form.text_field :display_name %>
      </div>
    </p>
  </fieldset>
  <div class="button" id="generic_dialog_submit_button">
    <%= submit_tag "Create", :class => "button", :id => "create_property_button" %>
  </div>
<% end %>