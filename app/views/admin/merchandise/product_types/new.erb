<h2>New Product Type</h2>

<%= form_for @product_type, :url  => admin_merchandise_product_types_path, 
                        :html => {:class => 'prepend-6'}  do |form| %>
  <fieldset id="admin-product_type-names">
    <div class='span-10 clear'>
      <div class='span-3'>
        <%= form.label :name %>
      </div>
      <div class='span-6 last'>
        <%= form.text_field :name %>
      </div>
    </div>
  </fieldset>
  <div class="button generic_submit_button">
    <%= submit_tag "Create", :class => "button", :id => "create_product_type_button" %>
  </div>
<% end %>