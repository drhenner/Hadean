<h2>New Variant (<%= @product.name %>)</h2>

<%= form_for @variant, :url  => admin_merchandise_product_variant_path(@variant), 
                        :html => {:class => 'prepend-6'}  do |form| %>
  <%= render :partial => '/admin/merchandise/variants/form', :locals => {:form => form}%>

  <div class="button generic_submit_button">
    <%= submit_tag "Update", 
                    :class  => "button", 
                    :id     => "create_variant_button" %>
  </div>
<% end %>