 
  <% content_for :head do %>
    <%= javascript_include_tag 'jquery.selectlist.pack' %>
  <% end %>

<h2>New Prototype</h2>

<%= form_for @prototype, :url  => admin_merchandise_prototypes_path, 
                        :html => {:class => 'prepend-6'}  do |form| %>
  <fieldset id="admin-prototype-names">
    <div class='span-3'>
      <%= form.label :name %>
    </div>
    <div class='span-6 last'>
      <%= form.text_field :name %>
    </div>
    
    <div class='span-3'>
      <%= form.label :active %>
    </div>
    <div class='span-6 last'>
      <%= form.check_box :active %>
    </div>
    
  </fieldset>
  <fieldset id="admin-prototype-names">
    <%= form.fields_for :properties do |property_form| %>
      <%= property_form.select "id", 
                               @all_properties.collect {|p| [ p.identifing_name, p.id ] }, 
                               { :include_blank => true, 
                                 :multiple      => true, 
                                 :size          => 7 } %>
    <% end %>
  </fieldset>
  
  <div class="button generic_submit_button">
    <%= submit_tag "Create", 
                    :class  => "button", 
                    :id     => "create_prototype_button" %>
  </div>
<% end %>
<script type="text/javascript">  
  $(document).ready(
    function () { 
      $('select#property_property_id').selectList({ sort: true });  
    }
  ); 
</script> 