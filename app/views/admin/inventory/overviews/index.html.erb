<%= render :partial => '/admin/inventory/sub_header'%>

<h2>Product Overview</h2>

<% @products.each do |product| %>
  <table>
    <thead>
      <tr >
        <th colspan='3' ><%= product.name %></th><th><%= link_to 'edit', edit_admin_inventory_overview_path(product) %></th>
      </tr>
      <tr>
        <th>SKU</th><th>price</th><th>Qty</th><th>description</th>
      </tr>
    </thead>
    
    <tbody>
      <% product.variants.each do |variant|%>
        <tr>
          <td><%= variant.sku %></td>
          <td><%= variant.price %></td>
          <td><%= variant.count_on_hand %></td>
          <td>
            <% variant.variant_properties.each do |vp| %>
              <%= vp.property_name %>: <%= vp.description %> <br/>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= will_paginate @products %>