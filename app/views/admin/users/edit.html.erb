<h1>Edit <%= @user.name %> </h1>

<%= semantic_form_for :user, @user, :url => admin_user_path(@user)  do |form| %>
    <%= form.inputs do %>
       <%= render :partial => '/admin/users/form', :locals => {:form => form} %>
    <% end %>
    <%= form.buttons do %>
      <%= form.commit_button "Update" %>
    <% end %>
<% end %>