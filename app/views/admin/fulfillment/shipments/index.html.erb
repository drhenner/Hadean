<h1>Listing shipments</h1>

<table>
  <tr>
    <th>Shipped at</th>
    <th>Tracking</th>
    <th>Number</th>
    <th>State</th>
    <th></th>
    <th></th>
  </tr>

<% @shipments.each do |shipment| %>
  <tr>
    <td><%= shipment.shipped_at %></td>
    <td><%= shipment.tracking %></td>
    <td><%= shipment.number %></td>
    <td><%= shipment.state %></td>
    <td><%= link_to 'Show', admin_fulfillment_order_shipment_path(@order, shipment) %></td>
    <td><%= link_to 'Edit', edit_admin_fulfillment_order_shipment_path(@order, shipment) %></td>
  </tr>
<% end %>
</table>

