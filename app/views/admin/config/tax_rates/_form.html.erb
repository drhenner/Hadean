<% path_to_submit = @tax_rate.new_record? ? admin_config_tax_rates_path : admin_config_tax_rate_path(@tax_rate) %>

<%= form_for(@tax_rate, :url => path_to_submit) do |f| %>
  <% if @tax_rate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tax_rate.errors.count, "error") %> prohibited this tax_rate from being saved:</h2>

      <ul>
      <% @tax_rate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :percentage %><br />
    <%= f.text_field :percentage %>
  </div>
  <div class="field">
    <%= f.label :tax_status_id %><br />
    <%= f.select :tax_status_id, @tax_statuses, {:include_blank => true} %>
  </div>
  <div class="field">
    <%= f.label :state_id %><br />
    <%= f.select :state_id, @states, {:include_blank => true} %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </div>
  <div class="field">
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
