<h2>Select Shipping Address</h2>

<%= form_tag admin_shopping_shipping_addresses_path do %>
  
  <% @shipping_addresses.each_with_index do |shipping_address, i| %>
    <% selected = session_admin_cart[:shipping_address].try(:id) == shipping_address.id %>
    <div  id='select-address-<%= i %>' 
          class='span-5 rounded-4
                <%= cycle("line_item_yellow", "line_item_gray") %> 
                <%= 'address_selected' if selected %>'>
      <%= render :partial => '/shared/compact_address', :locals => {:shopping_address => shipping_address} %>
      <%= link_to 'Use', admin_shopping_shipping_address_path(shipping_address), :method => 'put' %> |
      <%= link_to 'Edit', new_admin_shopping_shipping_address_path(:old_address_id => shipping_address.id) %>
    </div>
  <% end %>
<% end %>

<br />

<%= link_to 'New Shipping address', new_admin_shopping_shipping_address_path %>
