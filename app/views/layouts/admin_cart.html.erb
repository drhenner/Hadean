<!DOCTYPE html>
<html>
<head>
  <title>Hadean</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'compiled/buttons.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'compiled/print.css', :media => 'print'%>
  <%= stylesheet_link_tag 'compiled/main.css' %>
    <!--[if lt IE 8]
  <%= stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'%>
  <![endif]-->
  <%= csrf_meta_tag %>
  
  <%= javascript_include_tag 'jquery-1.4.2.min', 'jquery-ujs/src/rails', 'jquery-ui-1.8.4.custom.min','application' %>
  <%= yield :head %>
</head>
<body class="bp">
  <div class="bp">
    <%= raw "<p class='flash_notice'> #{notice}</p>"  if notice %>
    <%= raw "<p class='flash_error'>#{alert}</p>"     if alert %>
  </div>
  <div class="container bp">
    <div id='header_wrapper' class="span-24 header-image">
      <div id="header" class="span-12">
        <h1 id="hadean-title" class="alt">Hadean</h1>
      </div>

      <div id="subheader" class="span-12 last">
        <h3 class="alt">Your Ruby on Rails E-Commerce Solution.</h3>
        <div class="alt">
          <%= current_user.name %>
          <%= link_to 'Logout', logout_path, :id => 'admin-logout-button' %>
        </div>
      </div>
    </div>
    <hr />
    <div id='header_bar' class='float-left'>
          <%= link_to 'Orders', admin_order_carts_path, :class => 'button spade inline-block', :id => 'admin_orders_button' %>
          <%= link_to 'Merchandise', admin_merchandise_path, :class => 'button spade inline-block', :id => 'merchandise_button' %>
        
        <%= link_to "Inventory", admin_inventory_overviews_path, 
                            :class  => "button spade inline-block", 
                            :id     => "admin_inventory_button" %>
        <%= link_to "Users", admin_users_path, 
                            :class  => "button spade inline-block", 
                            :id     => "admin_users_button" %>
    </div>
    <div id='header_sub_bar'>
      <%= yield :header_sub_bar %>
    </div>
  
    <%= yield %>
    
    <div id='cart-right-side-panel' class='span-9 last float-right'>
      <%= render :partial => '/admin/order/right_panel_summary'%>
    </div>
  </div>
  
  <%= yield :bottom %>
  
  <script>
  jQuery(window).ready(
    function() {
      jQuery('.flash_notice').delay(6000).slideUp( 'slow');
      jQuery('.flash_error').delay(6000).slideUp( 'slow');
    }
  );
  </script>
  
  <%# javascript_include_tag 'jquery/jquery-1.4.2.min' %>
  <%#= javascript_include_tag 'jquery-1.4.2.min', 'rails' %>
  <%#= javascript_include_tag :all, :cache => true %>
</body>